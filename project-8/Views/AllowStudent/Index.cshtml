
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewBag.Title = "Index";
}
<style>
    /* Default image size /*/
    img {
        width: 100px;
        height: auto;
    }

        /*/ Zoomed image size */
        img.zoom {
            width: 400px;
            height: auto;
        }

    .thumbnail {
        top: -50px;
        left: -35px;
        display: block;
        z-index: 999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.3s;
        -webkit-transition-timing-function: ease;
    }

    .zoom {
        transform: scale(1.5); /* increase the size of the image by 50% */
    }

    .thumbnail:hover {
        transform: scale(5);
    }
</style>

<h2>Enrollment Forms</h2>
<hr />

<div class="ser" style="width:100%;overflow:auto">
    @using (Html.BeginForm("Index", "AllowStudent", FormMethod.Get))

    {
        @Html.TextBox("search")
        <input type="Submit" value="search" class="btn btn-light" />
    }
</div>

<table class="table">
    <tr>
        <th>
            <span>UserName</span>
        </th>
        <th>
            <span>PhoneNumber</span>
        </th>

        <th>
            <span>National Number</span>
        </th>
        <th>
            <span>Image</span>
        </th>
        <th>
            <span>ID image</span>
        </th>
        <th>
            <span>Certificate image</span>
        </th>
        <th>
            <span>Tawjehi AVG</span>
        </th>
        <th>
            <span>Major</span>
        </th>
        <th>
            <span>Action</span>
        </th>
    </tr>

    @foreach (var item in ViewBag.data)
    {

        <tr>
            <td>
                <span>@item.UserName</span>
            </td>
            <td>
                <span>@item.PhoneNumber</span>
            </td>
            <td>
                <span>@item.ID_number</span>
            </td>
            <td>
                <img id="img" class="thumbnail" src="@item.img" />
            </td>
            <td>
                <img class="thumbnail" src="@item.ID_img" />
            </td>
            <td>
                <img class="thumbnail" src="@item.certificate_img" />
            </td>
            <td>
                <span>@item.AVG</span>
            </td>
            <td>
                <span>@item.major</span>
            </td>

            <td>
                @Html.ActionLink("Accept", "Paid", new { id = item.Id }, new { @class = "btn btn-success" })

            </td>
        </tr>
    }

</table>

<script>
    console.log("running");
    // Get the image element
    const image = document.getElementById("img");

    // Add a click event listener
    image.addEventListener("click", function () {
        // Toggle a "zoom" class on the image
        this.classList.toggle("zoom");
    });


</script>